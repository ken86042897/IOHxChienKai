<h1>購物車</h1>

<%= link_to '清空購物車', carts_path, method: :delete, class: "btn btn-default btn-danger" %>
<!-- 把carts_path的s拿掉 -->
<table class="table table-hover">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>數量</td>
      <td>單價</td>
      <!-- <td>小計</td> -->
    </tr>
  </thead>
  <tbody>
    <% current_user.cart.cart_items.each do |cart_item| %> 
      <tr>
        <td><%= cart_item.product_id %></td>
        <td><%= cart_item.product_num  %></td>
        <td><%= cart_item.product_price %></td>
        
      </tr>
    <% end %>
  </tbody>
  
</table>

<%= link_to '繼續選購', products_path, class: "btn btn-default" %>
<%= link_to '結帳', '#', class: "btn btn-default" %>
